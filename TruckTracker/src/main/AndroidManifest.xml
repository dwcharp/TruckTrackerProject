        <activity
            android:name=".activity.admin.task.CreatePickUpTaskActivity"
            android:label="@string/title_activity_create_pick_up_task" >
        </activity>
        <activity
            android:name=".activity.admin.task.TaskManagementActivity"
            android:label="@string/title_activity_task_management" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
